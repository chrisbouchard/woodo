#!/usr/bin/env zsh

if (( $EUID != 0 ))
then
    # Non-root
    echo "It's a weird tree."
else
    # Root!
    cat <<-'EOF'
	    _              __
	   / `\  (~._    ./  )
	   \__/ __`-_\__/ ./
	  _ \ \/  \   \ |_   __
	(   )  \__/ -^    \ /  \
	 \_/ "  \  | o  o  |.. /  __
	      \. --' ====  /  || /  \
	        \   .  .  |---__.\__/
	        /  :     /   |   |
	        /   :   /     \_/
	     --/ ::    (
	    (  |     (  (____
	  .--  .. ----**.____)
	  \___/
	EOF
fi

